<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <!-- Package Information -->
    <PackageId>PhotoSwipe.Blazor</PackageId>
    <Version>1.3.0</Version>
    <Authors>Connor</Authors>
    <Company>PhotoSwipe.Blazor</Company>
    <Product>PhotoSwipe.Blazor</Product>
    <Description>A comprehensive Blazor component library that provides responsive image galleries with lightbox functionality using PhotoSwipe. Supports both Blazor Server and WebAssembly with features like drag &amp; drop uploads, image processing, overlay controls, and customizable layouts.</Description>
    <Copyright>Copyright Â© $(Authors) $([System.DateTime]::Now.Year)</Copyright>

    <!-- Package Metadata -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/conbag93/Photoswipe.Blazor</PackageProjectUrl>
    <RepositoryUrl>https://github.com/conbag93/Photoswipe.Blazor</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>blazor;photoswipe;gallery;lightbox;images;responsive;upload;webassembly;server;components</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>

    <!-- Build Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <!-- Framework-specific package references -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.11" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="9.0.4" />
  </ItemGroup>

  <!-- Package Files -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
