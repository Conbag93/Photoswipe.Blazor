@page "/photoswipe-demo"
@using PhotoSwipe.Blazor.Components
@using PhotoSwipe.Blazor.Models
@rendermode InteractiveServer

<PageTitle>PhotoSwipe Demo - Basic Gallery</PageTitle>

<h1>PhotoSwipe Blazor Demo - Basic Gallery Test</h1>

<div class="demo-section" data-testid="basic-gallery">
    <h2>Basic Gallery (DOM-based like Vanilla JS)</h2>
    <p>This should work exactly like the vanilla JS basic gallery - clicking thumbnails opens the lightbox at the correct image.</p>
    
    <PhotoSwipeGallery Items="@basicImages" Options="@basicOptions" />
</div>

<style>
    .demo-section {
        margin: 2rem 0;
        padding: 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
    }
    
    .demo-section p {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
    }
</style>

