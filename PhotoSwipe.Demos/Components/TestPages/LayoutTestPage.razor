            <div class="gallery-container">
                <PhotoSwipeGallery
                    Id="layout-test-gallery"
                    Items="@GetDisplayItems()"
                    CssClass="@GetGalleryLayoutClass()"
                    Options="@_galleryOptions" />
            </div>

            @if (_simulateMobile)
            {
                <div class="mobile-indicator">
                    üì± Mobile Simulation Active (375px width)
