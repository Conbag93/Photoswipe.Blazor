        </div>
        <div class="perf-stats">
            @if (_lastLayoutChangeTime.HasValue)
            {
                <span>Last layout change took: @_lastLayoutChangeTime.Value.ToString("F2") ms</span>
            }
        </div>
    </div>
</div>

